{
  "name": "mcp-pr-command",
  "version": "0.6.1",
  "description": "MCP PR Command",
  "main": "dist/index.js",
  "bin": {
    "mcp-pr-command": "dist/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "resources"
  ],
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "cli": "node dist/cli.js",
    "test": "jest --runInBand",
    "test:scope": "jest --runInBand --scope",
    "test:cov": "jest --runInBand --coverage",
    "test:unit": "NODE_ENV=test jest --runInBand --forceExit",
    "lint": "pnpm run lint:format && pnpm run lint:style",
    "lint:fix": "pnpm run lint:format:fix && pnpm run lint:style:fix",
    "lint:format": "prettier --check '**/{src,test}/**/*.ts'",
    "lint:format:fix": "prettier --write '**/{src,test}/**/*.ts'",
    "lint:style": "eslint",
    "lint:style:fix": "eslint --fix",
    "lint:staged": "lint-staged --config ../../.lintstagedrc",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "MCP",
    "github",
    "pr",
    "commit",
    "amend",
    "squash",
    "pull request",
    "merge request",
    "git flow",
    "trunk based"
  ],
  "author": "Farenheith",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codibre/mcp-pr-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/codibre/mcp-pr-monorepo.git/issues"
  },
  "homepage": "https://github.com/codibre/mcp-pr-monorepo/tree/main/libs/mcp-pr-command#readme",
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "read-pkg": "^10.0.0",
    "rimraf": "^6.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@codibre/fluent-iterable": "^1.39.2",
    "@octokit/rest": "^22.0.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "commander": "^14.0.2",
    "is-this-a-pigeon": "^1.2.0",
    "marked": "^17.0.0",
    "marked-terminal": "^7.3.0",
    "reflect-metadata": "^0.2.2"
  }
}
